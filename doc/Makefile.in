# ------------------------------------------------------------------------
# 	Makefile for manual page files 
# ------------------------------------------------------------------------

prefix =	@prefix@
mandir =	@mandir@
manndir =	$(mandir)/mann
srcdir =	@srcdir@
datadir =	@datadir@
datarootdir =	@datarootdir@
version =	@BLT_VERSION@

instdirs =	$(manndir) 

# GNU Make-specific macro
MAN =		$(patsubst $(srcdir)/%.rst,%.n,$(SRC)) 
HTM =		$(patsubst $(srcdir)/%.rst,%.htm,$(SRC)) 
PDF =		$(patsubst $(srcdir)/%.rst,%.pdf,$(SRC)) 

SRC = 		$(srcdir)/BLT.rst \
		$(srcdir)/arcball.rst \
		$(srcdir)/background.rst \
		$(srcdir)/base64.rst \
		$(srcdir)/beep.rst \
		$(srcdir)/bgexec.rst \
		$(srcdir)/bitmap.rst \
		$(srcdir)/busy.rst \
		$(srcdir)/checksum.rst \
		$(srcdir)/comboeditor.rst \
		$(srcdir)/combomenu.rst \
		$(srcdir)/compare.rst \
		$(srcdir)/csv.rst \
		$(srcdir)/cutbuffer.rst \
		$(srcdir)/datatable.rst \
		$(srcdir)/debug.rst \
		$(srcdir)/eps.rst \
		$(srcdir)/filmstrip.rst \
		$(srcdir)/grab.rst \
		$(srcdir)/graph.rst \
		$(srcdir)/htext.rst \
		$(srcdir)/listview.rst \
		$(srcdir)/mesh.rst \
		$(srcdir)/paintbrush.rst \
		$(srcdir)/palette.rst \
		$(srcdir)/paneset.rst \
		$(srcdir)/picture.rst \
		$(srcdir)/scrollset.rst \
		$(srcdir)/sftp.rst \
		$(srcdir)/spline.rst \
		$(srcdir)/table.rst \
		$(srcdir)/tabset.rst \
		$(srcdir)/timestamp.rst \
		$(srcdir)/tree.rst \
		$(srcdir)/treeview.rst \
		$(srcdir)/vector.rst \
		$(srcdir)/watch.rst \
		$(srcdir)/winop.rst

MISSING =	$(srcdir)/barchart.rst \
		$(srcdir)/combobutton.rst \
		$(srcdir)/comboentry.rst \
		$(srcdir)/combotree.rst \
		$(srcdir)/contour.rst \
		$(srcdir)/drawerset.rst \
		$(srcdir)/paneset.rst \
		$(srcdir)/tableview.rst \

INSTALL =	@INSTALL@
INSTALL_DATA =	@INSTALL_DATA@
SHELL =		/bin/sh
RM =		rm -rf
MKDIR_P =	@MKDIR_P@
VPATH =		$(srcdir)

.SUFFIXES: .pdf .n .htm .rst 

all: $(MAN) $(HTM) $(PDF)

install: all
	$(MKDIR_P) $(DESTDIR)$(manndir)
	for i in $(MAN_N) ; do \
		$(INSTALL_DATA) $$i $(DESTDIR)$(manndir); \
	done

.rst.n: 
	$(RM) $@
        echo "
:Author: George A Howlett
:Date:   2012-11-28
:Copyright: 2015 (c) George A. Howlett
:Version: 4.0
:Manual section: n
:Manual group: BLT Built-In Commands" > man.rst
	echo "" > toc.rst
	rst2man.py $< > $@

.rst.pdf: 
	$(RM) $@
	echo ".. contents:: Table of contents" > toc.rst
	rst2pdf $< -o $@

.rst.htm: 
	$(RM) $@
	echo ".. contents:: Table of contents" > toc.rst
	rst2html.py $< > $@

clean:
	$(RM) *.n *.htm *.pdf

distclean: clean
	$(RM) $(srcdir)/*.bak $(srcdir)/*\~ $(srcdir)/"#"* Makefile

