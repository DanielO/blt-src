# ------------------------------------------------------------------------
# 	Makefile for manual page files 
# ------------------------------------------------------------------------

prefix =	@prefix@
mandir =	@mandir@
manndir =	$(mandir)/mann
srcdir =	@srcdir@
datadir =	@datadir@
datarootdir =	@datarootdir@
version =	@BLT_VERSION@

instdirs =	$(manndir) 

# GNU Make-specific macro
MAN =		$(patsubst $(srcdir)/%.rst,%.n,$(SRC)) 
HTM =		$(patsubst $(srcdir)/%.rst,%.htm,$(SRC)) 
PDF =		$(patsubst $(srcdir)/%.rst,%.pdf,$(SRC)) 

SRC = 		$(srcdir)/BLT.rst \
		$(srcdir)/arcball.rst \
		$(srcdir)/background.rst \
		$(srcdir)/base64.rst \
		$(srcdir)/beep.rst \
		$(srcdir)/bgexec.rst \
		$(srcdir)/bitmap.rst \
		$(srcdir)/busy.rst \
		$(srcdir)/checksum.rst \
		$(srcdir)/comboeditor.rst \
		$(srcdir)/combomenu.rst \
		$(srcdir)/compare.rst \
		$(srcdir)/csv.rst \
		$(srcdir)/cutbuffer.rst \
		$(srcdir)/datatable.rst \
		$(srcdir)/debug.rst \
		$(srcdir)/eps.rst \
		$(srcdir)/filmstrip.rst \
		$(srcdir)/grab.rst \
		$(srcdir)/graph.rst \
		$(srcdir)/htext.rst \
		$(srcdir)/listview.rst \
		$(srcdir)/mesh.rst \
		$(srcdir)/paintbrush.rst \
		$(srcdir)/palette.rst \
		$(srcdir)/paneset.rst \
		$(srcdir)/picture.rst \
		$(srcdir)/scrollset.rst \
		$(srcdir)/sftp.rst \
		$(srcdir)/spline.rst \
		$(srcdir)/table.rst \
		$(srcdir)/tabset.rst \
		$(srcdir)/timestamp.rst \
		$(srcdir)/tree.rst \
		$(srcdir)/treeview.rst \
		$(srcdir)/vector.rst \
		$(srcdir)/watch.rst \
		$(srcdir)/winop.rst

MISSING =	$(srcdir)/barchart.rst \
		$(srcdir)/combobutton.rst \
		$(srcdir)/comboentry.rst \
		$(srcdir)/combotree.rst \
		$(srcdir)/contour.rst \
		$(srcdir)/drawerset.rst \
		$(srcdir)/paneset.rst \
		$(srcdir)/tableview.rst \

INSTALL =	@INSTALL@
INSTALL_DATA =	@INSTALL_DATA@
SHELL =		/bin/sh
RM =		rm -f
MKDIR_P =	@MKDIR_P@
VPATH =		$(srcdir)

.SUFFIXES: .pdf .n .htm .rst 
.NOTPARALLEL:

all: man html pdf

toc:
	echo ".. contents:: Table of contents" > toc.rst
notoc:
	echo "" > toc.rst

maninfo:
	echo ":Author: George A Howlett" > man.rst
	echo ":Date:   2012-11-28" >> man.rst
	echo ":Copyright: 2015 (c) George A. Howlett" >> man.rst
	echo ":Version: 4.0" >> man.rst
	echo ":Manual section: n" >> man.rst
	echo ":Manual group: BLT Built-In Commands" >> man.rst

nomaninfo:
	echo "" > man.rst

man: notoc maninfo $(MAN)
	echo ".. contents:: Table of contents" > toc.rst

html: nomaninfo toc $(HTM)

pdf: nomaninfo notoc $(PDF)

install: all
	$(MKDIR_P) $(DESTDIR)$(manndir)
	for i in $(MAN_N) ; do \
		$(INSTALL_DATA) $$i $(DESTDIR)$(manndir); \
	done

.rst.n: 
	/bin/sh $(srcdir)/rst2man.sh $< $@

.rst.pdf: 
	/bin/sh $(srcdir)/rst2pdf.sh $< $@

.rst.htm: 
	/bin/sh $(srcdir)/rst2html.sh $< $@

clean:
	$(RM) *.n *.htm *.pdf man.rst toc.rst

distclean: clean
	$(RM) $(srcdir)/*.bak $(srcdir)/*\~ $(srcdir)/"#"* Makefile

